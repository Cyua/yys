<script type="text/javascript">
	function bindEnter(){
		if(window.event.keyCode == 13)
			sendMsg();
	}

	function sendMsg(){
		var name = $("#positionName").val();
		$.ajax({
			url:"/request/position",
			type:"post",
			data:{name:name},
			success:function(result){
				$("#positionName").val("");	
				var text = "";
				for(var i = 0; i < result.position.length; i++){
					text += "<tr><td>" + result.name + "</td>";
					text += "<td>" + result.position[i] + "</td><td>暂无</td></tr>";
				}
				$("#tbl").html(text);
			},
			error:function(data,status){
				var text = "";
				text += "<tr><td colspan=3>没有该式神数据喔 （//▽//）请先检查拼写啦！要是没错的话...那就说明常规章节和御魂七层以内木有这个式神出现 _(:з」∠)_</td></tr>"
				$("#tbl").html(text);
			}
		});
	}
</script>

